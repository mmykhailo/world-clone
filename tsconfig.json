{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react-jsx",           
      "strict": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "rootDir": "src",
      "moduleResolution": "Bundler"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }